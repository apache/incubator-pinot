{{#if isSplit}}
  {{#each splitUrns as |urn|}}
    <div class="row">
      <h4 class="rootcause-chart--split__header">{{get-safe splitLabels urn}}</h4>
      {{timeseries-chart
        series=(get splitSeries urn)
        tooltip=tooltip
        legend=legend
        axis=axis
        subchart=splitSubchart
        height=splitChartHeight
      }}
    </div>
  {{/each}}
{{else}}
  <div class="row">
    {{timeseries-chart
      series=series
      tooltip=tooltip
      legend=legend
      axis=axis
      subchart=subchart
    }}
  </div>
{{/if}}
