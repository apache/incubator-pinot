{{#if anomaly}}
  <div class="card-container card-container--box-shadow">
    <div class="card-container__body">
      <!-- from old UI -->
      <div class="row">
        <h3>
          <span>Is this a true anomaly? (not implemented yet)</span>
          <a href="https://iwww.corp.linkedin.com/wiki/cf/display/ENGS/Anomaly+Labeling+on+ThirdEye#AnomalyLabelingonThirdEye-WhataretheLabels?" target="_blank">Learn more about each option</a>
        </h3>
      </div>
      <form id="anomaly-feedback-radio">
        <label for="feedback-radio-yes">
          <input type="radio" id="feedback-radio-yes" name="feedback-radio" value="ANOMALY">
          <span>Yes</span> (True Anomaly)
        </label>
        <label for=feedback-radio-na class="radio-inline">
          <input type="radio" id="feedback-radio-na" name="feedback-radio" value="ANOMALY_NEW_TREND">
          <span>Yes</span> (But New Trend)
        </label>
        <label for=feedback-radio-no class="radio-inline">
          <input type="radio" id="feedback-radio-no" name="feedback-radio" value="NOT_ANOMALY">
          <span>No</span> (False Alarm)
        </label><br>
      </form>
      <div id="anomaly-feedback-comment">
        <label for="feedback-comment"><span>Comment</span> (optional)</label>
        <textarea placeholder="Enter a comment" rows="2" id="feedback-comment"></textarea>
      </div>
      <p>Your feedback improves the accuracy of future alerts.</p>
    </div>
  </div>

  <div class="card-container card-container--box-shadow">
    <div class="card-container__body">
      <div class="row">
        <span>
          <div>{{functionName}}</div>
          <div>#{{anomalyId}} on {{metric}} ({{dataset}})</div>
        </span>
      </div>

      <div class="row">
        <div class="col-xs-2">
          <label class="te-label">Duration</label>
          <span>{{duration}}</span>
        </div>
        <div class="col-xs-2">
          <label class="te-label">Current Avg</label>
          <span>{{current}}</span>
        </div>
        <div class="col-xs-2">
          <label class="te-label">Baseline Avg</label>
          <span>{{baseline}}</span>
        </div>
        <div class="col-xs-2">
          <label class="te-label">Change</label>
          <span>{{change}}</span>
        </div>
        <div class="col-xs-2">
          <label class="te-label">Status</label>
          <span>{{status}}</span>
        </div>
        {{#if issueType}}
          <div class="col-xs-2">
            <label class="te-label">Issue Type</label>
            <span>{{issueType}}</span>
          </div>
        {{/if}}
      </div>

      <div class="row">
        <div class="col-xs-12">
          <label class="te-label">Dimensions</label>
          <span>{{dimensions}}</span>
        </div>
      </div>

    </div>
  </div>

{{else}}
  <div>Loading anomaly info ...</div>

{{/if}}
