<li class="entity-filter__group-filter">
  <label class="entity-filter__group-label">
    {{label}}
  </label>
  {{#if (eq type 'dropdown')}}
    {{#power-select
      selected=selected
      options=options
      onchange=(action 'onSubfilterSelection' label)
      as |option|}}
      {{option}}
    {{/power-select}}
  {{/if}}
</li>
