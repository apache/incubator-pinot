<button {{action "toggleSort" "metric"}}>metric</button> |
<button {{action "toggleSort" "dataset"}}>dataset</button> |
<button {{action "toggleSort" "change"}}>change</button>

<div class="container">
  {{#each urns as |urn|}}
    <div class="col-xs-2 rootcause-metric">
      <a {{action "toggleSelection" urn}}>{{get metrics urn}}<br/>({{get datasets urn}})<br/>{{get changesFormatted urn}}</a>
    </div>
  {{else}}
    No Metrics.
  {{/each}}
</div>