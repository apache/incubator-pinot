<p>testing | <a {{action "loadtestSelectedUrns"}}>select all entities (loadtest)</a></p>

{{rootcause-settings
  context=context
  config=settingsConfig
  onChange=(action "onContext")
}}

<p>loading
{{#if isLoadingEntities}}
  | ENTITIES
{{/if}}
{{#if isLoadingTimeseries}}
  | TIMESERIES
{{/if}}
</p>

<div class="row">
  <div class="col-xs-3">
    {{rootcause-legend
      entities=entities
      selectedUrns=selectedUrns
      invisibleUrns=invisibleUrns
      onVisibility=(action "onVisibility")
      onSelection=(action "onSelection")
    }}
  </div>
  <div class="col-xs-8">
    {{rootcause-chart
      entities=entities
      selectedUrns=chartSelectedUrns
      timeseries=timeseries
      context=context
      onHover=(action "chartOnHover")
    }}
  </div>
</div>

<button {{action (mut activeTab) "dimensions"}}>dimensions</button> |
<button {{action (mut activeTab) "metrics"}}>metrics</button> |
<button {{action (mut activeTab) "events"}}>events</button>

{{#if (eq activeTab "dimensions")}}
  <h3>Dimensions</h3>
  {{rootcause-heatmap
    breakdowns=breakdowns
    selectedUrns=selectedUrns
    onHeatmapClick=(action "onHeatmapClick")
  }}
{{/if}}

{{#if (eq activeTab "metrics")}}
  <h3>Metrics</h3>
  {{rootcause-metrics
    entities=entities
    aggregates=aggregates
    selectedUrns=selectedUrns
    onSelection=(action "onSelection")
  }}
{{/if}}

{{#if (eq activeTab "events")}}
  <h3>Events</h3>
  <div class="row">
    <div class="col-xs-3">
      {{filter-bar
        config=config
        urnsCache=urnsCache
        activeTab=selectedTab
        entities=eventFilterEntities
        filterUrns=(action "filterUrns")}}
    </div>
    <div class="col-xs-8">
      {{rootcause-table
        entities=eventTableEntities
        columns=eventTableColumns
        selectedUrns=selectedUrns
        onSelect=(action "filterOnSelect")
        onSelection=(action "onSelection")
      }}
    </div>
  </div>
{{/if}}
