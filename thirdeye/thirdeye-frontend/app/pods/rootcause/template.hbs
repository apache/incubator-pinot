<div class="container">
  {{#if anomalyUrn}}
    <div class="row">
      {{rootcause-anomaly
        entities=entities
        anomalyUrn=anomalyUrn
        onFeedback=(action "onFeedback")
      }}
    </div>
  {{/if}}

  <div class="row">
    {{!-- TODO: replace with loading spinner --}}
    {{#if isLoading}}
    <p>loading
      {{#if isLoadingEntities}}
        | ENTITIES
      {{/if}}
      {{#if isLoadingTimeseries}}
        | TIMESERIES
      {{/if}}
      {{#if isLoadingAggregates}}
        | AGGREGATES
      {{/if}}
      {{#if isLoadingBreakdowns}}
        | BREAKDOWNS
      {{/if}}
    </p>
  {{/if}}

    <p>session | <a {{action "onSessionSave"}}>save</a> | <a {{action "onSessionSaveCopy"}}>save copy</a>
      {{#if sessionId}}
        | {{#link-to "rootcause" (query-params sessionId=sessionId)}}{{sessionId}}{{/link-to}}
      {{/if}}
    </p>

    <h2 class="te-title te-title--rootcause">{{sessionName}} [edit?]</h2>

    <p>{{#if sessionId}}(Session {{sessionId}}) {{/if}}{{sessionText}} [edit?]</p>

    {{rootcause-settings
      context=context
      config=settingsConfig
      onChange=(action "onContext")
      onSelection=(action "onSelection")
    }}
  </div>

  <div class="row">
    <div class="card-container card-container--box-shadow">
      <div class="card-container__header">
        <div class="card-container__subnav">
          <a class="thirdeye-link thirdeye-link--nav {{if (eq activeTab "dimensions") "thirdeye-link--active"}}" {{action (mut activeTab) "dimensions"}}>
            Dimensions
          </a>
        </div>
        <div class="card-container__subnav">
          <a class="thirdeye-link thirdeye-link--nav {{if (eq activeTab "metrics") "thirdeye-link--active"}}" {{action (mut activeTab) "metrics"}}>
            Metrics
          </a>
        </div>
        <div class="card-container__subnav">
          <a class="thirdeye-link thirdeye-link--nav {{if (eq activeTab "events") "thirdeye-link--active"}}" {{action (mut activeTab) "events"}}>
            Events
          </a>
        </div>
      </div>
      <div class="card-container__body">
        <div class="rootcause-wrapper">
          {{rootcause-legend
            entities=entities
            selectedUrns=selectedUrns
            invisibleUrns=invisibleUrns
            onVisibility=(action "onVisibility")
            onSelection=(action "onSelection")
          }}
          {{rootcause-chart
            entities=entities
            selectedUrns=chartSelectedUrns
            timeseries=timeseries
            context=context
            onHover=(action "chartOnHover")
          }}
        </div>

        <div class="row">
          <div class="col-xs-12">
            {{#if (eq activeTab "dimensions")}}
              <h3>Dimensions</h3>
              {{rootcause-heatmap
                entities=entities
                breakdowns=breakdowns
                selectedUrns=selectedUrns
                onSelection=(action "onSelection")
              }}
            {{/if}}

            {{#if (eq activeTab "metrics")}}
              <h3>Metrics</h3>
              <div class="col-xs-3">
                Select user-defined metric:
              </div>
              <div class="col-xs-8">
                {{rootcause-metric-select
                  onSelection=(action "onSelection")
                }}
              </div>

              {{rootcause-metrics
                entities=entities
                aggregates=aggregates
                selectedUrns=selectedUrns
                onSelection=(action "onSelection")
              }}
            {{/if}}

            {{#if (eq activeTab "events")}}
              <h3>Events</h3>
              <div class="row">
                <div class="col-xs-3">
                  {{filter-bar
                    config=filterConfig
                    entities=eventFilterEntities
                    onFilter=(action "onFilter")}}
                </div>
                <div class="col-xs-9">
                  {{rootcause-table
                    entities=eventTableEntities
                    columns=eventTableColumns
                    selectedUrns=selectedUrns
                    onSelection=(action "onSelection")
                  }}
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
